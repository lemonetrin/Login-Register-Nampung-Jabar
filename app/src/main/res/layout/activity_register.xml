<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/register"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/green_606"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:fontFamily="@font/francois_one"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/isian_orange_1"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/fillUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/abeezee_reguler"
            android:minHeight="50dp"
            android:hint="Isikan username (min. 8 karakter)"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/isian_orange_1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/fillName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/abeezee_reguler"
            android:minHeight="50dp"
            android:hint="Isikan nama"
            android:inputType="textPersonName"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/isian_orange_1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/fillEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/abeezee_reguler"
            android:minHeight="50dp"
            android:hint="Isikan email"
            android:inputType="textEmailAddress"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/isian_orange_1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/fillPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/abeezee_reguler"
            android:minHeight="50dp"
            android:hint="Isikan password"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_hijautua_1"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/daftar"
                android:textColor="@color/green_606"
                android:background="@color/transparant"
                android:fontFamily="@font/francois_one"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvLoginAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Sudah punya akun? Masuk"
            android:textAlignment="center"
            android:fontFamily="@font/abeezee_reguler"
            android:textColor="@color/green_606"/>
    </LinearLayout>
</RelativeLayout>